<div class="container">
  <div class="row mt-5 justify-content-center">
    <div class="col-12 text-center">  <%# Sets column width and centers text %>

      <h3>Sign In</h3>

      <%= form_with url: signin_path, scope: :user, local: true) do |form| %>

         <div class="mb-3">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>
        
        <div class="mb-3">
          <%= form.label :email_address, class: "form-label" %>
          <%= form.email_field :email_address, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :password, class: "form-label" %>
          <%= form.password_field :password, class: "form-control" %>
        </div>

        <div class="d-grid"><%# d-grid makes the submit button full width %>
          <%= form.submit class: "btn btn-primary", value: "Sign In" %>
        </div>

      <% end %>

      <br>

    </div>
  </div>
</div>